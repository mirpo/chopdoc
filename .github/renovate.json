{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "schedule": [
        "on friday"
    ],
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":semanticCommits",
        ":pinVersions"
    ],
    "labels": [
        "dependencies"
    ],
    "osvVulnerabilityAlerts": true,
    "prConcurrentLimit": 10,
    "prHourlyLimit": 5,
    "vulnerabilityAlerts": {
        "schedule": [
            "at any time"
        ]
    },
    "enabledManagers": [
        "gomod",
        "github-actions"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "golang"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "gomod"
            ],
            "groupName": "go dependencies",
            "automerge": false
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github actions",
            "automerge": false
        },
        {
            "matchDepTypes": [
                "test"
            ],
            "groupName": "test dependencies",
            "automerge": false
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": false,
            "stabilityDays": 3
        }
    ]
}
